<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://jakarta.apache.org/log4j/ ">

    <appender name="FileLogging" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="bonus_service.log"/>
        <param name="DatePattern" value="yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="[%d{MM/dd/yyyy HH:mm:ss:sss z}] %5p %c{2}: %m%nadditional info: %X{mdcInfo} %n"/>
        </layout>
    </appender>

    <appender name="ConsoleLogging" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="=%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}.%M() - %m%n"/>
        </layout>
    </appender>

    <root>
        <priority value="debug"/>
        <appender-ref ref="FileLogging"/>
        <appender-ref ref="ConsoleLogging"/>
    </root>
</log4j:configuration>
